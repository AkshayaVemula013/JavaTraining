//If two numbers are given print the largest number with only one nested conditional operatorpackage Operators;

public class LargestNumberConditional {
	public static void main(String[] args)
	{
		int num1=10;
		int num2=20;
		int num3=30;
		int res = (num1>num2) ? (num1>num3?num1:num3): (num2>num3?num2:num3);
		System.out.println(res+" is the largest number");
	}

}
